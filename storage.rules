
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // This rule now matches the single, standardized path structure used for all uploads.
    // It allows an authenticated user to read and write only to their own submission directories.
    match /users/{userId}/submissions/{submissionId}/{category}/{fieldName}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
